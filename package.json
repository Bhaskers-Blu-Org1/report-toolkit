{
  "name": "report-toolkit-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "consumes Node.js diagnostic reports, outputs useful information",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/ibm/report-toolkit.git"
  },
  "license": "Apache-2.0",
  "author": "Christopher Hiller <christopher.hiller@ibm.com> (https://boneskull.com/)",
  "main": "packages/core/dist/report-toolkit-core.cjs.js",
  "module": "packages/core/src/index.js",
  "scripts": {
    "bootstrap": "cross-env NPM_CONFIG_LOGLEVEL=silent lerna bootstrap",
    "build": "rollup -c",
    "prebuild:declarations": "npm run clean:declarations",
    "build:declarations": "tsc -p tsconfig.declarations.json",
    "postbuild:declarations": "node scripts/post-build-declarations.js",
    "prebuild:docs": "concurrently npm:build:docs:cli-output npm:clean:docs npm:build:declarations",
    "build:docs": "typedoc --tsconfig tsconfig.docs.json --plugin typedoc-plugin-markdown,@boneskull/typedoc-plugin-external-module-name",
    "prebuild:docs:cli-output": "npm run clean:docs:cli-output",
    "build:docs:cli-output": "node scripts/build-cli-output.js",
    "clean": "git clean -fdx packages",
    "clean:declarations": "del-cli \"packages/*/src/**/*.d.ts\"",
    "clean:docs": "del-cli packages/docs/src/pages/api",
    "clean:docs:cli-output": "del-cli packages/docs/src/pages/cli-output.txt",
    "dev": "rollup -c -w",
    "fix": "eslint --fix .",
    "postinstall": "cross-env NPM_CONFIG_LOGLEVEL=silent lerna bootstrap --no-ci",
    "lint": "eslint .",
    "prerelease": "cross-env NPM_CONFIG_LOGLEVEL=silent npm run clean && npm run build",
    "pretest": "cross-env NPM_CONFIG_LOGLEVEL=silent npm run build",
    "test": "mocha \"./packages/*/test/**/*.spec.js\"",
    "posttest": "cross-env NPM_CONFIG_LOGLEVEL=silent npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{yml,md,mdx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@boneskull/typedoc-plugin-external-module-name": "^2.1.1",
    "@stream-io/rollup-plugin-node-builtins": "^2.1.1",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.138",
    "babel-eslint": "^10.0.3",
    "babel-plugin-lodash-fp": "^1.2.0",
    "concurrently": "^4.1.2",
    "cross-env": "^6.0.0",
    "csvtojson": "^2.0.10",
    "del-cli": "^3.0.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-semistandard": "^15.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-standard": "^4.0.1",
    "esm": "^3.2.25",
    "execa": "^2.0.4",
    "handlebars": "^4.4.0",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "markdownlint-cli": "^0.18.0",
    "mocha": "^6.2.0",
    "module-alias": "^2.2.1",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.3",
    "readdir-withfiletypes": "^1.0.2",
    "rename-cli": "^6.0.0",
    "replace-in-files-cli": "^0.3.0",
    "resolve-pkg": "^2.0.0",
    "rollup": "^1.21.4",
    "rollup-external-modules": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-hashbang": "^2.2.2",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-subpath-externals": "^3.4.0",
    "rollup-plugin-visualizer": "^2.6.0",
    "rxjs": "^6.5.3",
    "sinon": "^7.4.2",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.2.4",
    "typescript": "https://typescript.visualstudio.com/cf7ac146-d525-443c-b23c-0d58337efebc/_apis/build/builds/43773/artifacts?artifactName=tgz&fileId=711107D7A7EDE3F02F4F64E0FD028D050D020979A5C9224F00970747FE468C4202&fileName=/typescript-3.7.0-insiders.20190912.tgz",
    "unexpected": "^11.8.0",
    "unexpected-rxjs": "^0.2.4",
    "unexpected-sinon": "^10.11.2"
  },
  "engines": {
    "node": ">=8"
  }
}
