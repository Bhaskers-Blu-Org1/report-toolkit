{
  "name": "gnostic-dev",
  "version": "0.0.0",
  "private": true,
  "description": "consumes Node.js diagnostic reports, outputs useful information",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/ibm/gnostic.git"
  },
  "license": "Apache-2.0",
  "author": "Christopher Hiller <christopher.hiller@ibm.com> (https://boneskull.com/)",
  "main": "packages/core/index.js",
  "module": "packages/core/src/index.js",
  "bin": {
    "gnostic": "packages/cli/index.js"
  },
  "scripts": {
    "bootstrap": "cross-env NPM_CONFIG_LOGLEVEL=silent lerna bootstrap",
    "fix": "cross-env NPM_CONFIG_LOGLEVEL=silent syncpack format && lerna run --parallel --no-bail fix",
    "lint": "cross-env NPM_CONFIG_LOGLEVEL=silent lerna run --parallel --reject-cycles lint",
    "test": "cross-env NPM_CONFIG_LOGLEVEL=silent lerna run --stream test",
    "posttest": "cross-env NPM_CONFIG_LOGLEVEL=silent npm run lint && syncpack list-mismatches"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true
  },
  "dependencies": {
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-monorepo": "^0.2.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "esm": "^3.2.25",
    "husky": "^1.3.1",
    "lerna": "^2.11.0",
    "lint-staged": "^8.2.1",
    "markdownlint-cli": "^0.14.1",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.2",
    "syncpack": "^4.5.3",
    "unexpected": "^11.6.1",
    "unexpected-rxjs": "^0.2.0",
    "unexpected-sinon": "^10.11.2"
  },
  "engines": {
    "node": ">=8"
  }
}
