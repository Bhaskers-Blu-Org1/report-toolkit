{
  "lerna": "2.11.0",
  "packages": [
    "packages/*"
  ],
  "version": "0.2.0",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "*.spec.js",
    "*.md",
    "*.mdx"
  ]
}
